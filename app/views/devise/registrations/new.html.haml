%h2 ユーザー情報登録
= form_for(@user, url: user_registration_path) do |f|
  = render "devise/shared/error_messages", resource: @user
  .field
    = f.label :name
    %br/
    = f.text_field :name, autofocus: true, autocomplete: "nickname", placeholder: "例)メルカリ太郎"
  .field
    = f.label :email
    %br/
    = f.email_field :email, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (7 characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "7文字以上"
  .field
    = f.label :f_name_kanji
    %br/
    = f.text_field :f_name_kanji, autocomplete: "f_name_kanji", placeholder: "例)山田"
  .field
    = f.label :l_name_kanji
    %br/
    = f.text_field :l_name_kanji, autocomplete: "l_name_kanji", placeholder: "例)彩"
  .field
    = f.label :f_name_kana
    %br/
    = f.text_field :f_name_kana, autocomplete: "f_name_kana", placeholder: "例)ヤマダ"
  .field
    = f.label :l_name_kana
    %br/
    = f.text_field :l_name_kana, autocomplete: "l_name_kana", placeholder: "例)アヤ"
  .registration__form__item
    %label{for:'birthday'}
      生年月日
      %span
        必須
    .registration__form__item__birthday
      = raw sprintf(f.date_select(:birthday, start_year: (Time.now.year), end_year: (Time.now.year - 119), default: Date.new((Time.now.year)), prompt: "--", use_month_numbers: true, date_separator: '%s'),'年 ', '月 ') + '日'
  .actions
    = f.submit "次へ進む"
= render "devise/shared/links"
